<?xml version="1.0" encoding="utf-8"?><!-- res/layout/item_tag.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/dp_5"
    android:layout_marginVertical="@dimen/dp_2"
    android:background="@drawable/ic_cylinder"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingHorizontal="@dimen/dp_5"
    android:paddingVertical="@dimen/dp_3">

    <TextView
        android:id="@+id/textViewTagContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="#149AA8"
        android:textSize="14dp"
        tools:ignore="SpUsage"
        tools:text="Tag Content" />

    <View
        android:layout_width="1dp"
        android:layout_height="6dp"
        android:layout_marginHorizontal="5dp"
        android:background="#000" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/textViewTagIsLike"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:src="@drawable/ic_heart" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewTagLikes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:maxEms="3"
        android:textColor="#149AA8"
        android:textSize="14dp"
        tools:ignore="SpUsage"
        tools:text="99+" />
</LinearLayout>
