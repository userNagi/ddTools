<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_fragment_rounded_corners"
    tools:context=".ui.toolpage.ToolPageFragment">

    <TextView
        android:id="@+id/tool_main_body"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginStart="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_40"
        android:background="@drawable/bg_10_round"
        android:gravity="center"
        android:text="@string/tool_main_text"
        android:textColor="@color/black"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpUsage" />

    <TextView
        android:id="@+id/tool_item_1_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_15"
        android:drawablePadding="5dp"
        android:gravity="center_vertical"
        android:text="@string/about_idol_tool"
        android:textColor="@color/black"
        android:textSize="16dp"
        app:drawableStartCompat="@drawable/ic_5_16_cylinder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tool_main_body"
        tools:ignore="SpUsage" />

    <LinearLayout
        android:id="@+id/tool_item_1_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tool_item_1_text">

        <TextView
            android:id="@+id/tool_search_idol"
            style="@style/TextBigStyle"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_weight="1"
            android:background="@drawable/bg_30_round"
            android:gravity="center"
            android:padding="@dimen/dp_20"
            android:text="@string/search_idol_group"
            app:drawableEndCompat="@drawable/ic_idol_sing" />

        <TextView
            android:id="@+id/tool_search_activity"
            style="@style/TextBigStyle"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_20"
            android:layout_weight="1"
            android:background="@drawable/bg_30_round"
            android:gravity="center"
            android:padding="@dimen/dp_20"
            android:text="@string/search_idol_activity"
            app:drawableEndCompat="@drawable/ic_activity_pay" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tool_item_2_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tool_item_1_layout">

        <TextView
            android:id="@+id/tool_choose_who"
            style="@style/TextBigStyle"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_weight="1"
            android:background="@drawable/bg_30_round"
            android:gravity="center"
            android:padding="@dimen/dp_20"
            android:text="@string/choose_who"
            app:drawableEndCompat="@drawable/ic_choose_who" />

        <TextView
            android:id="@+id/tool_choose_posture"
            style="@style/TextBigStyle"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_20"
            android:layout_weight="1"
            android:background="@drawable/bg_30_round"
            android:gravity="center"
            android:padding="@dimen/dp_20"
            android:text="@string/choose_posture"
            app:drawableEndCompat="@drawable/ic_choose_pos" />
    </LinearLayout>

    <TextView
        android:id="@+id/tool_item_2_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_15"
        android:drawablePadding="5dp"
        android:gravity="center_vertical"
        android:text="@string/about_fan_tool"
        android:textColor="@color/black"
        android:textSize="16dp"
        app:drawableStartCompat="@drawable/ic_5_16_cylinder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tool_item_2_layout"
        tools:ignore="SpUsage" />

    <LinearLayout
        android:id="@+id/tool_item_3_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tool_item_2_text">


        <TextView
            android:id="@+id/tool_fan_board"
            style="@style/TextBigStyle"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_weight="1"
            android:background="@drawable/bg_30_round_green"
            android:gravity="center"
            android:text="@string/tool_fan_board"
            android:textColor="@color/purple_700" />

        <TextView
            android:id="@+id/tool_fan_board_2"
            style="@style/TextBigStyle"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_weight="1"
            android:background="@drawable/bg_30_round_green"
            android:gravity="center"
            android:text="@string/to_be_do"
            android:textColor="@color/purple_700" />

        <TextView
            android:id="@+id/tool_fan_board_3"
            style="@style/TextBigStyle"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginEnd="@dimen/dp_20"
            android:layout_weight="1"
            android:background="@drawable/bg_30_round_green"
            android:gravity="center"
            android:text="@string/to_be_do"
            android:textColor="@color/purple_700" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>