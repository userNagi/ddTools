<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/home_page_listview_image"
        android:layout_width="165dp"
        android:layout_height="230dp"
        android:padding="@dimen/dp_1"
        android:src="@drawable/ic_baseline_add"
        app:shapeAppearance="@style/homePageListImageStyle"
        app:strokeColor="@color/lty"
        app:strokeWidth="@dimen/dp_2" />

    <TextView
        android:id="@+id/home_page_listview_text"
        android:layout_width="165dp"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:maxHeight="@dimen/dp_40"
        android:maxLength="15"
        android:maxLines="2"
        android:textSize="@dimen/dp_15"
        tools:ignore="SpUsage"
        tools:text="当第一道裂缝出现时我所见到的" />
</LinearLayout>