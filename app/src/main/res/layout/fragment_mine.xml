<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_fragment_rounded_corners"
    tools:context=".ui.minepage.MinePageFragment">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/login_view_image"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:background="#C9CACC"
        android:src="@drawable/baseline_user_unlogin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearance="@style/circleStyle" />

    <TextView
        android:id="@+id/login_view_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="@string/clock_login"
        app:layout_constraintBottom_toBottomOf="@+id/login_view_image"
        app:layout_constraintStart_toEndOf="@+id/login_view_image"
        app:layout_constraintTop_toTopOf="@+id/login_view_image" />

</androidx.constraintlayout.widget.ConstraintLayout>